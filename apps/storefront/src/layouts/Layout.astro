---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;

// Get cart count from cookie
const cartId = Astro.cookies.get('cart')?.value;
let cartCount = 0;
if (cartId) {
  try {
    const { getCart } = await import('../lib/payload');
    const cart = await getCart(Number(cartId));
    if (cart) {
      cartCount = cart.items.reduce((sum, item) => sum + item.quantity, 0);
    }
  } catch {
    // Ignore cart errors on layout
  }
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-gray-50">
    <header class="bg-white shadow-sm sticky top-0 z-50">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16 items-center">
          <a href="/" class="text-xl font-bold text-gray-900">
            Astro Store
          </a>
          <div class="flex items-center gap-6">
            <a href="/products" class="text-gray-600 hover:text-gray-900">
              Products
            </a>
            <a href="/cart" class="relative text-gray-600 hover:text-gray-900">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
              {cartCount > 0 && (
                <span 
                  id="cart-count"
                  class="absolute -top-2 -right-2 bg-blue-600 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center"
                >
                  {cartCount}
                </span>
              )}
            </a>
          </div>
        </div>
      </nav>
    </header>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <slot />
    </main>

    <footer class="bg-gray-900 text-gray-400 mt-auto">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <p class="text-center">
          Powered by <a href="https://astro.build" class="text-white hover:underline">Astro</a> + 
          <a href="https://payloadcms.com" class="text-white hover:underline">Payload CMS</a> on 
          <a href="https://cloudflare.com" class="text-white hover:underline">Cloudflare</a>
        </p>
      </div>
    </footer>
  </body>
</html>

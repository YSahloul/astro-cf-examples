---
// src/pages/quote.astro
import Layout from '@/layouts/Layout.astro';
---

<Layout title="Get Your Quote - Sal's Wheels & Tires">
  <main class="min-h-screen bg-gray-100 py-8">
    <div class="container mx-auto px-4 max-w-6xl">
      <!-- Page Header -->
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-gray-900">AI-Powered Fitment Assistant</h1>
        <p class="text-gray-600 mt-2">
          Get personalized wheel and tire recommendations based on thousands of real builds
        </p>
      </div>

      <!-- Main Content -->
      <div id="quote-app"></div>
    </div>
  </main>
</Layout>

<script>
  import { createElement } from 'react';
  import { createRoot } from 'react-dom/client';
  import QuoteApp from '@/components/QuoteApp';

  const container = document.getElementById('quote-app');
  if (container) {
    const root = createRoot(container);
    root.render(createElement(QuoteApp));
  }
</script>

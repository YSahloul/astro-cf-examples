---
interface Testimonial {
  id: number;
  name: string;
  text: string;
  rating?: number | null;
}

interface Props {
  testimonials: Testimonial[];
}

const { testimonials } = Astro.props;
---

{testimonials.length > 0 && (
  <section class="bg-base-200 py-12">
    <div class="max-w-7xl mx-auto px-4">
      <div class="flex items-center justify-between mb-8">
        <div>
          <h2 class="text-2xl md:text-3xl font-black uppercase" style="font-family: 'Oswald', sans-serif;">Customer Reviews</h2>
          <div class="rating rating-sm mt-2">
            <input type="radio" name="rating-display" class="mask mask-star-2 bg-warning" disabled />
            <input type="radio" name="rating-display" class="mask mask-star-2 bg-warning" disabled />
            <input type="radio" name="rating-display" class="mask mask-star-2 bg-warning" disabled />
            <input type="radio" name="rating-display" class="mask mask-star-2 bg-warning" disabled />
            <input type="radio" name="rating-display" class="mask mask-star-2 bg-warning" disabled checked />
          </div>
        </div>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
        {testimonials.slice(0, 6).map((t) => (
          <div class="card bg-base-100 border-l-4 border-primary">
            <div class="card-body">
              <div class="rating rating-sm">
                <input type="radio" class="mask mask-star-2 bg-warning" disabled />
                <input type="radio" class="mask mask-star-2 bg-warning" disabled />
                <input type="radio" class="mask mask-star-2 bg-warning" disabled />
                <input type="radio" class="mask mask-star-2 bg-warning" disabled />
                <input type="radio" class="mask mask-star-2 bg-warning" disabled checked />
              </div>
              <p class="text-sm opacity-80">"{t.text}"</p>
              <p class="font-black uppercase text-sm">â€” {t.name}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
)}

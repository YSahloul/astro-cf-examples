---
interface Props {
  phone?: string | null;
}

const { phone } = Astro.props;
---

<section class="bg-neutral text-neutral-content py-12 md:py-16">
  <div class="max-w-4xl mx-auto px-4 text-center">
    <h2 class="text-3xl md:text-5xl font-black uppercase mb-6" style="font-family: 'Oswald', sans-serif;">
      Ready to <span class="text-primary">Upgrade</span>?
    </h2>
    <p class="text-xl opacity-60 mb-8">Get a free quote today. No obligation.</p>
    <div class="flex flex-wrap justify-center gap-4">
      <a href="#quote" class="btn btn-primary btn-lg" style="font-family: 'Oswald', sans-serif;">
        Get Free Quote
      </a>
      {phone && (
        <a href={`tel:${phone.replace(/\D/g, '')}`} class="btn btn-secondary btn-lg gap-2" style="font-family: 'Oswald', sans-serif;">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Call {phone}
        </a>
      )}
    </div>
  </div>
</section>
